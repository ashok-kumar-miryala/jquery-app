<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Country</th>
    <th>Add type one</th>
    <th>Add type two</th>
    <th>Add type three</th>
    <th>Add type four</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.country.name %></td>
    <td><%= address.add_type_one %></td>
    <td><%= address.add_type_two %></td>
    <td><%= address.add_type_three %></td>
    <td><%= address.add_type_four %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

